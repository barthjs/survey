{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "barthjs/survey",
    "type": "project",
    "description": "Survey creation tool",
    "license": "MIT",
    "require": {
        "php": "^8.5",
        "laravel/framework": "^12.43.1",
        "livewire/livewire": "^3.7.2",
        "robsontenorio/mary": "^2.4.10"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16.2",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.8.1",
        "laravel/pint": "^1.26",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.3",
        "pestphp/pest": "^4.2.0",
        "pestphp/pest-plugin-laravel": "^4.0.0",
        "pestphp/pest-plugin-livewire": "^4.0.1",
        "pestphp/pest-plugin-type-coverage": "^4.0.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan livewire:publish --assets",
            "@php artisan clear",
            "@update:requirements"
        ],
        "update:requirements": [
            "composer bump",
            "npx npm-check-updates -u"
        ],
        "lint": "pint --parallel",
        "test:type-coverage": "pest --type-coverage --compact --min=100",
        "test:unit": "pest --parallel",
        "test:lint": "pint --parallel --test",
        "test:types": "phpstan",
        "test": [
            "@test:type-coverage",
            "@test:unit",
            "@test:lint",
            "@test:types"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
